{
  "name": "mcp-router",
  "version": "0.1.0",
  "description": "An open-source MCP router that proxies multiple MCP servers behind a single MCP endpoint (stdio + Streamable HTTP).",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "docs",
    "examples",
    "README.md",
    "LICENSE",
    "mcp-router.config.example.json",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "SECURITY.md",
    "CODE_OF_CONDUCT.md",
    "RELEASING.md"
  ],
  "bin": {
    "mcpr": "./dist/cli.js"
  },
  "scripts": {
    "dev:serve": "tsx src/cli.ts serve",
    "dev:stdio": "tsx src/cli.ts stdio",
    "build": "tsup",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "smoke:http": "node examples/smoke-http.mjs",
    "smoke:stdio": "node examples/smoke-stdio.mjs",
    "test": "npm run build && vitest run",
    "lint": "node -c dist/cli.js || true"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.2.0",
    "cross-spawn": "^7.0.6",
    "express": "^5.1.0",
    "prom-client": "^15.1.0",
    "semver": "^7.7.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
